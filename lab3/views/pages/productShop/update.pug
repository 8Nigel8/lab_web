extends ../../layout

block content
  div(class='col-md-6')
    form(id='productShop-add-form' name='productShop-add-form' class='form-horizontal' method="POST" action='')
      div(class='form-group')
        div(class='col-md-3')
          label(for='shop') Shop
        div(class='col-md-9')
          input(id='shop' name='shop' value=$fn.getPropOrDefault(newProduct, 'shop') class='form-control')
      div(class='form-group')
        div(class='col-md-3')
          label(for='product') Product
        div(class='col-md-9')
          input(id='product' name='product' value=$fn.getPropOrDefault(newProduct, 'product') class='form-control')
      div(class='form-group')
        div(class='col-md-12')
          button(type='submit' class='btn btn-primary') Update